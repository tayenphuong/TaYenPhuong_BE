@model IEnumerable<TaYenPhuong_BE.Models.Category>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<h2>Index</h2>
@*định dạng nút nhấn theo bootstrap 4 clop số 8*@
<p>
    @Html.ActionLink("THÊM MỚI", "Create",null, new {@class ="btn btn-primary"})
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.CategoryName)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.CategoryName)
        </td>
        <td>
            @Html.ActionLink("CẬP NHẬT", "Edit", new { id=item.CategoryID }, new { @class = "btn btn-success btn-sm" }) |
          
            @Html.ActionLink("XÓA", "Delete", new { id = item.CategoryID }, new { @class = "btn btn-dark btn-sm" })
        </td>
    </tr>
}

</table>
